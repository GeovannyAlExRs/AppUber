<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.MapDriverActivity">

    <include layout="@layout/action_bar"/>

    <fragment
        android:id="@+id/id_frag_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectarse"
        android:layout_marginTop="@dimen/space24"
        android:layout_marginBottom="@dimen/space24"
        android:layout_marginLeft="@dimen/space56"
        android:layout_marginRight="@dimen/space56"
        android:layout_gravity="bottom"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_rounded"
        android:backgroundTint="@color/colorPrimaryDark"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>